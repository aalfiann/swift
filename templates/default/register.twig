{% block content_body %}
  <div class="row">
    <div class="col-xl-6 mb-5 mb-xl-0">
      <div class="card shadow">
        <div class="card-header">
          <div class="row align-items-center">
            <div class="col">
              <h3 class="mb-0">Form Register</h3>
            </div>
          </div>
        </div>
        <div class="card-body">
        
          {% if status == 'success' %}
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <span class="alert-inner--icon"><i class="ni ni-check-bold"></i></span>
            <span class="alert-inner--text"><strong>Success!</strong> {{ message }}</span>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          {% elseif status == 'error' %}
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <span class="alert-inner--icon"><i class="fas fa-exclamation-triangle"></i></span>
            <span class="alert-inner--text"><strong>Failed!</strong> {{ message }}
            {% if not problem is empty %}
              <br>Problem:<br>{{problem}}
            {% endif %}
            </span>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          {% endif %}
        

          <form role="form" method="post">
                <div id="g-username" class="form-group">
                  <div class="input-group input-group-alternative mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
                    </div>
                    <input id="username" name="username" class="form-control" placeholder="Name" type="text" required>
                  </div>
                  <div class="text-muted font-italic"><small><span class="text-danger font-weight-700" id="checkusername"></span></small></div>
                </div>
                <div id="g-email" class="form-group">
                  <div class="input-group input-group-alternative mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                    </div>
                    <input id="i-email" name="email" class="form-control" placeholder="Email" type="email" required>
                  </div>
                  <div class="text-muted font-italic"><small><span class="text-danger font-weight-700" id="checkemail"></span></small></div>
                </div>
                <div class="form-group">
                  <div class="input-group input-group-alternative">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                    </div>
                    <input id="password" name="password" class="form-control" placeholder="Password" type="password" required>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group input-group-alternative">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                    </div>
                    <input id="password2" name="password2" class="form-control" placeholder="Confirm Password" type="password" required>
                  </div>
                </div>
                <div class="text-muted font-italic"><small><span class="text-danger font-weight-700" id="checkpassword"></span></small></div>
                <div class="row my-4">
                  <div class="col-12">
                    <div class="custom-control custom-control-alternative custom-checkbox">
                      <input class="custom-control-input" id="customCheckRegister" type="checkbox">
                      <label class="custom-control-label" for="customCheckRegister">
                        <span class="text-muted">I agree with the <a href="#!">Privacy Policy</a></span>
                      </label>
                    </div>
                  </div>
                </div>
                <input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
                <input type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">
                <div class="text-center">
                  <button id="btnregister" type="submit" class="btn btn-primary my-4" disabled>Create account</button>
                  <p><a href="{{ path_for('/login')}}">Already have an account?</a></p>
                </div>
              </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
{% block appjs %} 
  getScript('{{ site_url ~ path_for('/') }}assets/js/argon.js?v={{ global.app.version }}');
  $('#customCheckRegister').click(function() {
    if($("#customCheckRegister").is(':checked')) {
      $("#btnregister").prop("disabled",false);
    } else {
      $("#btnregister").prop("disabled",true);
    }
  });
  $('#username').keyup($$app.throttle(function(){
    $('#g-username').removeClass('has-danger has-success');
    $('#username').removeClass('is-invalid is-valid');
    $('#checkusername').removeClass('text-danger text-success');
    $('#checkusername').html('');
    if($$validate.isNotEmpty($('#username').val())) {
      if($$validate.isUsername($('#username').val())) {
        $.ajax({
          url: "{{ site_url ~ path_for('/') }}user/verify",
          data: {username:$('#username').val()},
          dataType: "json",
          type: "post",
          success: function(data) {
            if (data.status == "success"){
              $('#g-username').addClass('has-success');
              $('#username').addClass('is-valid');
              $('#checkusername').addClass('text-success');
            } else {
              $('#g-username').addClass('has-danger');
              $('#username').addClass('is-invalid');
              $('#checkusername').addClass('text-danger');
            }
            $('#checkusername').html(data.message);
          },
          error: function(x, e) {
            if($$validate.isJson(x.responseText)){
              var obj = JSON.parse(x.responseText);
              console.log(obj.message);
            } else {
              console.log(x.responseText);
            }
          }
        });
      } else {
        $('#g-username').addClass('has-danger');
        $('#username').addClass('is-invalid');
        $('#checkusername').addClass('text-danger');
        $('#checkusername').html('Format username is alphanumeric 3-20.');
      }
    }
  },1000));
  $('#i-email').keyup($$app.throttle(function(){
    $('#g-email').removeClass('has-danger has-success');
    $('#i-email').removeClass('is-invalid is-valid');
    $('#checkemail').removeClass('text-danger text-success');
    $('#checkemail').html('');
    if($$validate.isNotEmpty($('#i-email').val())){
      if(!$$validate.isEmail($('#i-email').val())){
        $('#g-email').addClass('has-danger');
        $('#i-email').addClass('is-valid');
        $('#checkemail').addClass('text-danger');
        $('#checkemail').html('Email address is invalid!');
      } else {
        $.ajax({
          url: "{{ site_url ~ path_for('/') }}user/verify/email",
          data: {email:$('#i-email').val()},
          dataType: "json",
          type: "post",
          success: function(data) {
            if (data.status == "success"){
              $('#g-email').addClass('has-success');
              $('#i-email').addClass('is-valid');
              $('#checkemail').addClass('text-success');
            } else {
              $('#g-email').addClass('has-danger');
              $('#i-email').addClass('is-invalid');
              $('#checkemail').addClass('text-danger');
            }
            $('#checkemail').html(data.message);
          },
          error: function(x, e) {
            if($$validate.isJson(x.responseText)){
              var obj = JSON.parse(x.responseText);
              console.log(obj.message);
            } else {
              console.log(x.responseText);
            }
          }
        });
        //$('#g-email').addClass('has-success');
        //$('#i-email').addClass('is-valid');
        //$('#checkemail').addClass('text-success');
        //$('#checkemail').html('Email address is valid!');
      }
    }
  },1000));
  $('#password').keyup($$app.throttle(function(){
    $('#checkpassword').removeClass('text-danger text-success');
    $('#checkpassword').html('');
    if($$validate.isNotEmpty($('#password').val()) && $$validate.isNotEmpty($('#password2').val())) {
      if($('#password').val() != $('#password2').val()){
        $('#checkpassword').addClass('text-danger');
        $('#checkpassword').html('Password is not match!');
      } else {
        $('#checkpassword').addClass('text-success');
        $('#checkpassword').html('Password is match!');
      }
    }
  },1000));
  $('#password2').keyup($$app.throttle(function(){
    $('#checkpassword').removeClass('text-danger text-success');
    $('#checkpassword').html('');
    if($$validate.isNotEmpty($('#password').val()) && $$validate.isNotEmpty($('#password2').val())) {
      if($('#password').val() != $('#password2').val()){
        $('#checkpassword').addClass('text-danger');
        $('#checkpassword').html('Password is not match!');
      } else {
        $('#checkpassword').addClass('text-success');
        $('#checkpassword').html('Password is match!');
      }
    }
  },1000));
  
{% endblock %}