{% block content_body %}
  <div class="row">
    <div class="col-xl-6 mb-5 mb-xl-0">
      <div class="card shadow">
        <div class="card-header">
          <div class="row align-items-center">
            <div class="col">
              <h3 class="mb-0">Form Change Password</h3>
            </div>
          </div>
        </div>
        <div class="card-body">
          {% if status == 'success' %}
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <span class="alert-inner--icon"><i class="ni ni-check-bold"></i></span>
            <span class="alert-inner--text"><strong>Success!</strong> {{ message }}</span>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          {% elseif status == 'error' %}
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <span class="alert-inner--icon"><i class="fas fa-exclamation-triangle"></i></span>
            <span class="alert-inner--text"><strong>Failed!</strong> {{ message }}
            {% if not problem is empty %}
              <br>Problem:<br>{{problem}}
            {% endif %}
            </span>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          {% endif %}
          <form role="form" method="post">
                <div class="form-group mb-3">
                  <div class="input-group input-group-alternative">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="fas fa-unlock"></i></span>
                    </div>
                    <input name="oldpassword" class="form-control" placeholder="Your old password" type="password" required>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group input-group-alternative">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    </div>
                    <input name="password" id="password" class="form-control" placeholder="Your new password" type="password" required>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group input-group-alternative">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    </div>
                    <input name="password2" id="password2" class="form-control" placeholder="Confirm new password" type="password" required>
                  </div>
                  <div class="text-muted font-italic"><small><span class="text-danger font-weight-700" id="checkpassword"></span></small></div>
                </div>
                
                <input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
                <input type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">
                <div class="text-center">
                  <button type="submit" class="btn btn-primary my-4">Submit</button>
                </div>
              </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
{% block appjs %}
  getScript('{{ site_url ~ path_for('/') }}assets/js/argon.js?v={{ global.app.version }}');
  $('#password').keyup($$app.throttle(function(){
    $('#checkpassword').removeClass('text-danger text-success');
    $('#checkpassword').html('');
    if($$validate.isNotEmpty($('#password').val()) && $$validate.isNotEmpty($('#password2').val())) {
      if($('#password').val() != $('#password2').val()){
        $('#checkpassword').addClass('text-danger');
        $('#checkpassword').html('Password is not match!');
      } else {
        $('#checkpassword').addClass('text-success');
        $('#checkpassword').html('Password is match!');
      }
    }
  },1000));
  $('#password2').keyup($$app.throttle(function(){
    $('#checkpassword').removeClass('text-danger text-success');
    $('#checkpassword').html('');
    if($$validate.isNotEmpty($('#password').val()) && $$validate.isNotEmpty($('#password2').val())) {
      if($('#password').val() != $('#password2').val()){
        $('#checkpassword').addClass('text-danger');
        $('#checkpassword').html('Password is not match!');
      } else {
        $('#checkpassword').addClass('text-success');
        $('#checkpassword').html('Password is match!');
      }
    }
  },1000));
{% endblock %}