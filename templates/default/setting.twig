{% block preloadjs %}
var editor = null;
function writeMessage(selector,type,message1,message2){message2=(message2===undefined)?"":message2;$(function(){return $(selector).html('<div class="alert alert-'+type+' alert-dismissible"><button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span> </button><strong>'+message1+'</strong> '+message2+'</div>');});}
function saveapp(){
  $.ajax({
    url: "{{ site_url ~ path_for('/') }}setting/app/api/json",
    data: {
      name: $('#name').val(),
      language: $('#language').val(),
      timezone: $('#timezone').val(),
      http_max_age: $('#http_max_age').val(),
      log_level: $('#log_level').val(),
      template_handler: $('#template_handler').val(),
      template_folder: $('#template_folder').val()
    },
    dataType: "json",
    type: "post",
    success: function(data) {
      if (data.status == "success"){
        writeMessage("#appmessage","success",data.message);
      } else {
        writeMessage("#appmessage","danger",data.message,JSON.stringify(data.problem));
      }
    },
    error: function(x, e) {
      if($$validate.isJson(x.responseText)){
        var obj = JSON.parse(x.responseText);
        console.log(obj.message);
      } else {
        console.log(x.responseText);
      }
    }
  });
}
function loadapp(){
  $.ajax({
    url: "{{ site_url ~ path_for('/') }}setting/app/load/api/json",
    dataType: "json",
    type: "get",
    cache: false,
    success: function(data) {
      if (data.status == "success"){
        $('#name').val(data.result.name);
        $('#language').val(data.result.language);
        $('#timezone').val(data.result.timezone);
        $('#log_level').val(data.result["log.level"]);
        $('#http_max_age').val(data.result["http.max-age"]);
        $('#template_handler').val(data.result["template.handler"]);
        $('#template_folder').val(data.result["template.folder"]);
      }
    },
    error: function(x, e) {
      if($$validate.isJson(x.responseText)){
        var obj = JSON.parse(x.responseText);
        console.log(obj.message);
      } else {
        console.log(x.responseText);
      }
    }
  });
}
