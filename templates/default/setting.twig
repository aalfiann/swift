    dataType: "json",
    type: "post",
    success: function(data) {
      if (data.status == "success"){
        writeMessage("#templatemessage","success",data.message);
      } else {
        writeMessage("#templatemessage","danger",data.message,"Data must be valid json formatted");
      }
    },
    error: function(x, e) {
      if($$validate.isJson(x.responseText)){
        var obj = JSON.parse(x.responseText);
        console.log(obj.message);
