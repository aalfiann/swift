              if($$validate.isUsername($('#username').val())) {
                $.ajax({
                  url: "{{ site_url ~ path_for('/') }}user/verify",
                  data: {username:$('#username').val()},
                  dataType: "json",
                  type: "post",
                  success: function(data) {
                    if (data.status == "success"){
                      $('#g-username').addClass('has-success');
                      $('#username').addClass('is-valid');
                      $('#checkusername').addClass('text-success');
                    } else {
                      $('#g-username').addClass('has-danger');
                      $('#username').addClass('is-invalid');
                      $('#checkusername').addClass('text-danger');
                    }
                    $('#checkusername').html(data.message);
                  },
                  error: function(x, e) {
                    if($$validate.isJson(x.responseText)){
                      var obj = JSON.parse(x.responseText);
                      console.log(obj.message);
                    } else {
