                  url: "{{ site_url ~ path_for('/') }}user/verify/email",
                  data: {email:$('#i-email').val()},
                  dataType: "json",
                  type: "post",
                  success: function(data) {
                    if (data.status == "success"){
                      $('#g-email').addClass('has-success');
                      $('#i-email').addClass('is-valid');
